{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@api/*": [
        "src/*"
      ],
      "@swapi-mern/domain": ["../../packages/domain/src"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "references": [
    {
      "path": "../domain"
    }
  ]
}