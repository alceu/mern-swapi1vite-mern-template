{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "../../.eslintrc.json",
        "plugin:react/recommended"
    ],
    "overrides": [
        {
            "files": [
                "vite.config.ts",
                "vite.config.d.ts"
            ],
            "parserOptions": {
                "project": null
            }
        }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": [
            "./tsconfig.json",
            "./tsconfig.node.json"
        ]
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}