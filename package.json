{
  "name": "swapi-mern-example",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel --filter api --filter pwa dev",
    "dev:api": "pnpm --filter api dev",
    "dev:pwa": "pnpm --filter pwa dev",
    "build": "pnpm -r build",
    "build:api": "pnpm --filter api build",
    "build:pwa": "pnpm --filter pwa build",
    "start:api": "pnpm --filter api start",
    "start:pwa": "pnpm --filter pwa start",
    "start": "pnpm --parallel --filter api --filter pwa start",
    "check-types": "pnpm --filter @swapi-mern/domain build && pnpm -r check-types",
    "coverage": "pnpm --filter api coverage && pnpm --filter pwa coverage && pnpm --filter domain coverage",
    "markdownlint": "markdownlint-cli2 **/*.md --ignore-path .markdownlintignore",
    "lint:base": "eslint . --ext .js,.cjs,.mjs,.ts,.tsx --no-error-on-unmatched-pattern && pnpm markdownlint && prettier --check .",
    "lint:base:fix": "eslint . --ext .js,.cjs,.mjs,.ts,.tsx --no-error-on-unmatched-pattern --fix && pnpm markdownlint && prettier --write .",
    "lint:packages": "pnpm -r lint",
    "lint:packages:fix": "pnpm -r lint:fix",
    "lint": "pnpm lint:packages && pnpm lint:base",
    "lint:fix": "pnpm lint:packages:fix && pnpm lint:base:fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "markdownlint": "^0.40.0",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "3.2.5",
    "typescript": "^5.9.2"
  }
}
