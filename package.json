{
  "name": "vite-mern-template",
  "version": "2.0.3",
  "private": true,
  "workspaces": [
    "api",
    "pwa"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:pwa\"",
    "dev:api": "npm run dev --workspace=api",
    "dev:pwa": "npm run dev --workspace=pwa",
    "build": "npm run build --workspaces",
    "build:api": "npm run build --workspace=api",
    "build:pwa": "npm run build --workspace=pwa",
    "check-types": "npm run check-types --workspaces",
    "prettier": "prettier --write ."
  },
  "repository": "https://github.com/apicgg/vite-mern-template.git",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "3.2.5",
    "typescript": "^5.9.2"
  }
}
