{
  "name": "swapi-mern-example",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel --filter api --filter pwa dev",
    "dev:api": "pnpm --filter api dev",
    "dev:pwa": "pnpm --filter pwa dev",
    "build": "pnpm -r build",
    "build:api": "pnpm --filter api build",
    "build:pwa": "pnpm --filter pwa build",
    "start:api": "pnpm --filter api start",
    "start:pwa": "pnpm --filter pwa start",
    "start": "pnpm --parallel --filter api --filter pwa start",
    "check-types": "pnpm -r check-types",
    "lint": "pnpm -r lint && pnpm markdownlint",
    "markdownlint": "markdownlint-cli2 **/*.md --ignore-path .markdownlintignore",
    "coverage": "pnpm --filter api coverage && pnpm --filter pwa coverage",
    "lint:fix": "pnpm -r lint:fix && prettier --write .",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "markdownlint": "^0.40.0",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "3.2.5",
    "typescript": "^5.9.2"
  }
}
