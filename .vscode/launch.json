{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm run pwa-dev",
      "name": "Start yourturn-pwa",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "npm run api-dev",
      "name": "Start yourturn-api",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome localhost pwa",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/packages/pwa/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome localhost api",
      "url": "http://localhost:5000/v0.0.1/docs/"
    }
  ]
}
